{% extends "@giv_din_stemme/gds-page-wrapper.html.twig" %}

{% block gds_content %}
  <div class="py-5">
    {{ thank_you_text|raw }}
  </div>
{% endblock %}
{% block gds_footer %}
  <div class="py-5">
    <form action="/start-donating">
      <div class="grid grid-cols-2">
        <div class="sm:col-span-1 mt-2 justify-self-start">
        </div>
        <div class="sm:col-span-1 justify-self-end">
          <button type="submit" class="btn-default">
            <span class="mr-3">{{ 'Donate more'|t }}</span>
            <i class="fa-solid fa-circle-arrow-right"></i>
          </button>
        </div>
      </div>
    </form>
  </div>
{% endblock %}

