{% if breadcrumb %}

  <div class="container mx-auto md:px-3 text-secondary md:my-3">
    <nav role="navigation" aria-labelledby="system-breadcrumb">
      <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
      <ol class="flex gap-1">
      {% for item in breadcrumb %}
        <li>
          {% if item.url is same as '/' %}
            <a class="nav-item" href="{{ item.url }}">{{ drupal_config('system.site', 'name') }}</a>
          {% else %}
            {% if item.url %}
              <span class="mr-3" >/</span><a class="nav-item" href="{{ item.url }}">{{ item.text }}</a>
            {% endif %}
          {% endif %}
        </li>
      {% endfor %}
        <li><span class="mr-3" >/</span>{{ drupal_title() }}</li>
      </ol>
    </nav>
  </div>
{% endif %}
